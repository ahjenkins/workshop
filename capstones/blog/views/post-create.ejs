<%- include ("partials/header.ejs") %>
<h1>Create a post</h1>
<p><%= date %></p>

<form action="/submit" method="POST" id="create-article">
    <label for="title">Title</label></br>
    <input type="text" name="title" placeholder="Title your post"></br>
    <label for="author">Author</label></br>
    <input type="text" name="author" placeholder="Full Name"></br>
    <label for="content">Write your thoughts below</label></br>
    <textarea name="content" rows="10" cols="30">Type your content here..</textarea>
</form>

<button type="submit" form="create-article" value="Submit">Post</button>

